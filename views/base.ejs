<%- include('header') -%>
    
<div class="text-center center-div" id="login">
    <div class="container w-25 border py-5">
        <div class="title">
            <h2 class="font-weight-bold">Login System</h2>
            <span>Login for the exciting user</span>
            <% if(locals.logout) { %>
                <div class="alter alert-success text-center">
                    <%= logout %> 
                </div>
            <% } else {%>
              
        </div>
        <form action="route/login" method="post" class="pt-3">
            <div class="form-group pt-2">
                <input type="email" class="form-control" name="email" placeholder="email">
                <small class="text-left text-muted form-text">Register email address</small>
            </div>
            <div class="form-group pt-2">
                <input type="password" class="form-control" name="passwd" placeholder="password">
            </div>
            <button class="btn btn-success mt-3 rounded-pill" type="submit">Login</button>
        </form>
        <% } %>
    </div>
</div>

<%- include('footer') -%>